
<%= month_calendar events: @events do |date, events| %>
  <%= date.day %>

  <% events.each do |event| %>
    <%# MODAL %>
    <div class="modal fade" id='<%= event.id %>' tabindex="-1" role="dialog" aria-labelledby='<%= event.id %>Label' aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id='<%= event.id %>Label'><%= event.name %></h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class='row modal-body'>
            <div class="col-6 event-information">
              <p><strong><%= event.event_type.titleize %> Name :</strong> <%= event.name %></p>
              <p><strong>Location :</strong> <%= event.location %></p>
              <p><strong>Additional Info :</strong> <%= event.description %></p>
              <p><strong>Leader :</strong> <%= event.user.full_name %></p>
              <p><strong>Date :</strong> <%= event.date.strftime("%B %d, %Y, %A") %></p>
              <p><strong>Start :</strong> <%= event.start_time.strftime("%H:%M") %></p>
              <p><strong>End :</strong> <%= event.end_time.strftime("%H:%M") %></p>
              <%= link_to 'Edit', edit_event_path(event) %>
              <%= link_to 'Delete',
                event_path(event),
                data: {confirm: 'Are you sure?'},
                method: :delete
              %>
            </div>
            <div class='col-6'>
              <p> Hello World </p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class = 'subsection'>
      <button
        id="new_event_btn"
        type="button"
        class="event-button"
        data-toggle="modal"
        data-target='#<%= event.id %>'
        data-whatever="@mdo"
      ><%= event.name.truncate(10) %> | <%= event.event_type %>
      </button>
    </div>
  <% end %>
<% end %>
