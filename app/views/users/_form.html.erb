<%= simple_form_for(@user) do |f| %>
    <%= f.error_notification %>

    <div>
        <%= f.input :first_name %>
        <%= f.input :last_name %>
        <%= f.input :email %>
        <%= f.input :phone_number %>
        <%= f.input :password %>
        <%= f.input :password_confirmation %>
    </div>

    <div class="form-actions">
        <%= f.button :submit%>
    </div>
<% end %>