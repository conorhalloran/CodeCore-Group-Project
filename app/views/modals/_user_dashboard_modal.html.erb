<div class="modal fade" id='dashboardModal' tabindex="-1" role="dialog" aria-labelledby='dashboardLabel' aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id='dashboardLabel'>Dashboard</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel" data-interval="3000">
          <p class='centering'> <em> Private Messages </em> </p>
          <div class="carousel-inner">
            <div class="carousel-item active centering">
              MEETING AT PORT COQUITLAM
            </div>
            <div class="carousel-item centering">
              SLIDESHOW MEETING
            </div>
            <div class="carousel-item centering">
              WHATEVER MEETING
            </div>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>

        <div class="row modal-body">
          <div class="col-md-6 modal-team">
            <p class='centering'><strong>Current Teams</strong></p>
            <ul class='team-box'>
              <% @current_user_teams.each do |team| %>
                <li id="team-1" style="cursor: pointer"><em><%= team.name %></em></li>
                <% team.memberships.each do |mship| %>
                  <p style="margin-bottom: 1px;"><%= @users.find_by_id(mship.user_id).full_name %></p>
                <% end %>
              <% end %>
            </ul>
          </div>

          <div class="col-md-6 modal-team">
            <p class='centering'><strong>Briefings</strong></p>
            <ul class='team-box'>
              <li class="important-docs"><em>Important Documents</em></li>
              <div class = 'im-docs' class = 'hide'>
                <p>Campaign Overview</p>
                <p>Canvas Petition</p>
                <p>Fact Sheet</p>
                <p>Brochure</p>
                <p>Training</p>
              </div>

              <li class="team-docs"><em>Team Documents</em></li>
              <div class = 'docs' class = 'hide'>
                <p>Port Moody Research Folder</p>
                <p>Data Log Folders</p>
              </div>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
