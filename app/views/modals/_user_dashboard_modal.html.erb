<div class="modal fade" id='dashboardModal' tabindex="-1" role="dialog" aria-labelledby='dashboardLabel' aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id='dashboardLabel'>Dashboard</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel" data-interval="3000">
          <p class='centering'> <em> Private Messages </em> </p>
          <div class="carousel-inner">
            <% current_user.teams.each_with_index do |team , index| %>
            <div class="carousel-item centering <% if index == 0 %>
               active
            <% end %>">
              <strong>Event Name: </strong> <%=team.event.name%> | <strong>Event Location: </strong> <%=team.event.location%> | <strong>Event Time: </strong> <%=team.event.start_time.strftime('%Y-%B-%d')%>
            </div>
            <% end %>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>

        <div class="row modal-body">
          <div class="col-md-6 modal-team">
            <p class='centering'><strong>My Teams</strong></p>
            <div class="task-viewer">
              <ul>
                <% @current_user_teams.each do |team| %>
                  <li id="team-1"><strong><%= team.name %></strong></li>
                  <% team.memberships.each do |mship| %>
                    <p class = 'mt-2'><em>Name: </em><%= @users.find_by_id(mship.user_id).full_name %></p>
                    <p><em>Email: </em><%= @users.find_by_id(mship.user_id).email %></p>
                  <% end %>
                <% end %>
              </ul>
            </div>
          </div>

          <div class="col-md-6 modal-team">
            <p class='centering'><strong>Briefings</strong></p>
            <ul class='team-box'>
              <li class="important-docs"><em>Important Documents</em></li>
              <div class = 'im-docs' class = 'hide'>
                <ul>
                  <li><a href="https://drive.google.com/drive/folders/1z9cW9wEtSChhwT6E-FPbvuxPwOtR4hGX">Campaign Overview</a></li>
                  <li><a href="https://drive.google.com/drive/folders/1z9cW9wEtSChhwT6E-FPbvuxPwOtR4hGX">Canvas Petition</a></li>
                  <li><a href="https://drive.google.com/drive/folders/1z9cW9wEtSChhwT6E-FPbvuxPwOtR4hGX">Fact Sheet</a></li>
                  <li><a href="https://drive.google.com/drive/folders/1z9cW9wEtSChhwT6E-FPbvuxPwOtR4hGX">Brochure</a></li>
                  <li><a href="https://drive.google.com/drive/folders/1z9cW9wEtSChhwT6E-FPbvuxPwOtR4hGX">Training</a></li>
                </ul>
              </div>

              <li class="team-docs"><em>Team Documents</em></li>
              <div class = 'docs' class = 'hide'>
                <ul>
                  <li><a href="https://drive.google.com/drive/folders/1z9cW9wEtSChhwT6E-FPbvuxPwOtR4hGX">Port Moody Research Folder</a></li>
                  <li><a href="https://drive.google.com/drive/folders/1z9cW9wEtSChhwT6E-FPbvuxPwOtR4hGX">Data Log Folders</a></li>
                </ul>
              </div>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
