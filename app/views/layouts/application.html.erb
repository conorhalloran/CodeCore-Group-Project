<!DOCTYPE html>
<html>
  <head>
    <title>GroupProject</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>

    <%# NAVBAR %>
    <nav class="navbar navbar-expand-sm sticky-top">
      <a class="navbar-brand" href="/"><%= image_tag 'Force_Logo_Transparent_Background.png', style: 'width: 100px;' %></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto">

          <li class="nav-item">
              <%= form_tag(events_path, :method => "get", id: "search-form") do %>
                <%= text_field_tag :search, params[:search], placeholder: "Search Here" %>
                <%= submit_tag "Search", :name => nil %>
              <% end %>

          </li>

          <li class="nav-item">
            <a class="nav-link" href="https://slack.com/"><%= image_tag 'slack.svg', style: 'width: 70px;' %></a>
          </li>

          <% if user_signed_in? %>

          <div class="add-event">
            <button
              type="button"
              class="nav-link cal-btn"
              data-toggle="modal"
              data-target="#newEventModal"
              data-whatever="@mdo"
            >
            New Event
            </button>
          </div>

          <div class="form-inline">
            <button
              id="dashboard_btn"
              type="button"
              class="nav-link cal-btn"
              data-toggle="modal"
              data-target="#dashboardModal"
              data-whatever="@mdo"
            >
            User Dashboard
            </button>
          </div>

            <span class="navbar-text">
              Hello, <%= current_user.first_name %>
            </span>
            <li class="nav-item">
            <%= link_to 'Profile', users_path, :class => 'nav-link' %>
            </li>

            <% if current_user.is_admin? %>
            <li class="nav-item">
            <%= link_to 'Admin Dashboard', admin_dashboard_index_path, :class => 'nav-link' %>
            </li>
              <span class="navbar-text">
                &nbsp; Admin
              </span>
            <% end %>

          <li class="nav-item">
            <%= link_to('Sign Out', session_path, method: :delete, :class => 'nav-link') %>
          </li>

        <% else %>
          <li class="nav-item">
            <%= link_to('Sign In', new_session_path, :class => 'nav-link') %>
          </li>
          <li class="nav-item">
            <%= link_to('Sign Up', new_user_path, :class => 'nav-link') %>
          </li>
        <% end %>
        </ul>
      </div>
    </nav>

    <%# New Modal %>
    <%= render './modals/new_event_modal' %>

    <%#= DASHBOARD MODAL %>
    <%= render './modals/user_dashboard_modal' %>

    <main class="container-fluid">
        <%# ALERTS %>
        <% if flash[:notice].present? %>
          <div class="alert alert-success alert-dismissable fade-show" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <%= flash[:notice] %>
          </div>
        <% end %>

        <% if flash[:alert].present? %>
          <div class="alert alert-danger alert-dismissable fade-show" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <%= flash[:alert] %>
          </div>
        <% end %>

      <%= yield %>
    </main>

    <%# console %>

  </body>
</html>
