<p class='text-center pt-4'><strong>ADMIN DASHBOARD</strong></p>
<p class='text-center'><strong>Event Count: </strong><%= @stats[:event_count] %> | <strong>User Count: </strong><%= @users.count %></p>

<table class="table">
  <tbody>
    <tr>
      <th>#</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Created At</th>
      <th>Is Admin?</th>
    </tr>

    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.created_at.strftime("%B %d, %Y") %></td>
        <td><%= user.is_admin? %></td>
      </tr>
    <% end %>
  </tbody>
</table>
